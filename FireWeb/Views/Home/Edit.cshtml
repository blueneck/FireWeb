@model FireWeb.Models.LoginModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>LoginModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @using (Html.BeginForm("Post", "Home/Edit", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <h5>ユーザー名</h5><h5 style="color:#ff0000">* 必須</h5>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="name" name="name" type="text" value="@Model.name">
                </div>
            </div>

            <div class="form-group">
                <h5>パスワード</h5><h5 style="color:#ff0000">* 必須</h5>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="password" name="password" type="text" value="@Model.password">
                </div>
            </div>

            <div class="form-group">
                <h5>メールアドレス</h5>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="mail" name="mail" type="text" value="@Model.mail">
                </div>
            </div>

            <div class="form-group">
                <h5>備考</h5>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="remark" name="remark" type="text" value="@Model.remark">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Edit" class="btn btn-default" />
                </div>
            </div>
        }
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
